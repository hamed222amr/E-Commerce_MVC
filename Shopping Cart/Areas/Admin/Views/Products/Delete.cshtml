@model ShoppingCartApp.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>
<h4>Are you sure you want to delete this product?</h4>

<div>
    <strong>@Model.Name</strong> - @Model.Category?.Name
</div>

<form asp-area="Admin" asp-controller="Products" asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-2">Delete</button>
    <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
</form>
