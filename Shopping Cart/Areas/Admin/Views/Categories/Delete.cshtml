@model ShoppingCartApp.Models.Category
@{
    ViewData["Title"] = "Delete Category";
}

<h2>Delete Category</h2>
<h4>Are you sure you want to delete this category?</h4>

<div>
    <strong>@Model.Name</strong>
</div>

<form asp-area="Admin" asp-controller="Categories" asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-2">Delete</button>
    <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
</form>
