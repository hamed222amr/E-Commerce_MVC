@model ShoppingCartApp.Models.Category
@{
    ViewData["Title"] = "Create Category";
}

<h2>Create Category</h2>
<form asp-area="Admin" asp-controller="Categories" asp-action="SaveCreate" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success mt-2">Save</button>
    <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="btn btn-secondary mt-2">Back</a>
</form>
