@model ShoppingCartApp.Models.Order
@{
    ViewData["Title"] = "Order Details";
}

<h2>Order Details (ID: @Model.Id)</h2>

<div class="card mb-3">
    <div class="card-body">
        <p><strong>User:</strong> @Model.User?.Email</p>
        <p><strong>Total Price:</strong> @String.Format("{0:C}", Model.TotalPrice)</p>
        <p><strong>Status:</strong> <span class="badge bg-info text-white">@Model.Status</span></p>
        <p><strong>Created At:</strong> @Model.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</p>

        <form asp-area="Admin" asp-controller="Orders" asp-action="UpdateStatus" method="post" class="row g-2 mt-3">
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="col-auto">
                <select name="status" class="form-select">
                    <option value="New" selected="@("New"==Model.Status)">New</option>
                    <option value="Processing" selected="@("Processing"==Model.Status)">Processing</option>
                    <option value="Completed" selected="@("Completed"==Model.Status)">Completed</option>
                    <option value="Cancelled" selected="@("Cancelled"==Model.Status)">Cancelled</option>
                </select>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Update Status</button>
            </div>
        </form>
    </div>
</div>

<h4>Items</h4>
<table class="table table-hover table-bordered">
    <thead class="table-light">
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Product?.Name</td>
                <td>@item.Quantity</td>
                <td>@String.Format("{0:C}", item.UnitPrice)</td>
            </tr>
        }
        @if (Model.Items == null || !Model.Items.Any())
        {
            <tr><td colspan="3" class="text-center text-muted">No items for this order</td></tr>
        }
    </tbody>
</table>

<a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="btn btn-secondary">Back to Orders</a>
