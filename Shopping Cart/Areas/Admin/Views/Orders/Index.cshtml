@model IEnumerable<ShoppingCartApp.Models.Order>
@{
    ViewData["Title"] = "Manage Orders";
}

<h2>Orders</h2>

<table class="table table-hover table-bordered">
    <thead class="table-light">
        <tr>
            <th>Order</th>
            <th>User</th>
            <th>Total Price</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.User?.Email</td>
                    <td>@order.TotalPrice.ToString("C")</td>
                    <td><span class="badge bg-info text-white">@order.Status</span></td>
                    <td>@order.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                    
                    <td>
                        <a asp-area="Admin" asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">Details</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center text-muted">No orders yet</td>
            </tr>
        }
    </tbody>
</table>
