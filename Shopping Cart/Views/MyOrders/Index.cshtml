@model IEnumerable<ShoppingCartApp.Models.Order>
@{
    ViewData["Title"] = "My Orders";
}

<h2>My Orders</h2>

<table class="table table-hover table-bordered">
    <thead class="table-light">
        <tr>
            <th>#</th>
            <th>Total Price</th>
            <th>Status</th>
            <th>Created At</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@String.Format("{0:C}", order.TotalPrice)</td>
                <td><span class="badge bg-info text-white">@order.Status</span></td>
                <td>@order.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <a asp-controller="MyOrders" asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">Details</a>
                </td>
            </tr>
        }
        @if (!Model.Any())
        {
            <tr><td colspan="5" class="text-center text-muted">No orders yet</td></tr>
        }
    </tbody>
</table>
