@model IEnumerable<ShoppingCartApp.Models.Order>
@{
    ViewData["Title"] = "My Orders";
}

<h2 class="mb-4">My Orders</h2>

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>Order </th>
            <th>Total Price</th>
            <th>Status</th>
            <th>Date</th>
            <th>Items</th>
            <th style="width:150px;"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.TotalPrice.ToString("C")</td>
                    <td>
                        @if (order.Status == "New")
                        {
                            <span class="badge bg-secondary">New</span>
                        }
                        else if (order.Status == "Processing")
                        {
                            <span class="badge bg-success">Processing</span>
                        }
                        else if (order.Status == "Cancelled")
                        {
                            <span class="badge bg-danger">Cancelled</span>
                        }
                        else if (order.Status == "Completed")
                        {
                            <span class="badge bg-primary">Completed</span>
                        }
                        else
                        {
                            @order.Status
                        }
                    </td>
                    <td>@order.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        @if (order.Items != null && order.Items.Any())
                        {
                            <ul class="list-unstyled mb-0">
                                @foreach (var item in order.Items)
                                {
                                    <li>@item.Product?.Name × @item.Quantity (@item.UnitPrice.ToString("C"))</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span class="text-muted">No items</span>
                        }
                    </td>
                    <td>
                        @if (order.Status == "New")
                        {
                            <a asp-controller="Payment" asp-action="Repay" asp-route-orderId="@order.Id" class="btn btn-sm btn-warning">
                                Pay Now
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">—</span>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">You have no orders yet.</td>
            </tr>
        }
    </tbody>
</table>
