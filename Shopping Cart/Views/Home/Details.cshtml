@model ShoppingCartApp.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid rounded shadow" alt="@Model.Name" />
        </div>
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p class="text-muted fs-5">Price: @Model.Price $</p>
            <p>@Model.Description</p>

            <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.Id" class="btn btn-primary btn-lg">
                Add to Cart <i class="bi bi-cart-plus"></i>
            </a>

            <a asp-action="Index" class="btn btn-outline-secondary mt-3">
                Back to Home
            </a>
        </div>
    </div>
</div>
